<% include ../partials/header %>
<div class="text_container">
	<h1>Travel deprives you of speech, and then turns you into a <br> better narrator.</h1>
	<p class="p_animate">Molestiae sint illum nobis orem ipsum dolor sit amet consectetur adipisicing elit. </p>
</div>
<div class="arrow_down">
	<i class="fa fa-angle-double-down" aria-hidden="true"></i>
</div>
</header>

<section class="container">
	<div class="heading_text">
		<h4>select your next story</h4>
		<span id="gorithontal_line"></span>
		<p class="text_heading_text">Lorem ipsum dolor sit amet consectetur adipisicing elit.
			Doloremque quisquam voluptate eveniet modi ducimus, tempora cum repellat dolorem sunt,
			hic ad ab quas eius, laudantium suscipit vel? Culpa, amet omnis.</p>
	</div>

	<div class="post_section left_animate">
		<% allPosts.map((post)=> { %>
		<img class="post_section_img" src="<%= post.imageUrl %>" alt="">
		<div  class="post_section_heading">
			<a href="#"> <h4><%= post.name %></h4>
				<p class="post_section_text"><%= post.description %></p></a>
			<div class="post_section_btn">
				<a  href="#">read more</a>
			</div>
			<div class="marker">
				<span ><i class="fa fa-map-marker" aria-hidden="true"></i>  Itineraries, Lisbon</span>
			</div>
		</div>
		<% }) %>
	</div>

	</section>
	<div class="scrollTop"></div>
	<footer>
		<div class="container">
			<nav class="main_menu_footer ">
				<div class="logo">
					<span id="logo">Pro  Treveler Blog</span>
				</div>
				<div class="menu">
					<ul>
						<li><a href="#">Blog</a></li>
						<li><a href="#">About</a></li>
						<li><a href="#">Contact</a></li>
					</ul>
				</div>
				<div class="social_icons">
					<i class="fa fa-instagram" aria-hidden="true"></i>
					<i class="fa fa-facebook-official" aria-hidden="true"></i>
					<i class="fa fa-twitter" aria-hidden="true"></i>
					<i class="fa fa-youtube-play" aria-hidden="true"></i>
				</div>
			</nav>
		</div>
	</footer>





